{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% include 'components/_navbar.html.twig' %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="contain">
        <!-- reset -->
        <div class="relative py-3 sm:max-w-xl sm:mx-auto mt-8">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
            </div>
            <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
                <div class="max-w-md mx-auto">
                    <div>
                        <h1 class="text-2xl font-semibold">Réinitialiser votre mot de passe</h1>
                    </div>
                    <div class="divide-y divide-gray-200">
                        <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                            <div class="relative">
                                {{ form_start(requestForm) }}
                                {{ form_row(requestForm.email) }}
                                <button class="bg-blue-500 text-white rounded-md px-2 py-1 mt-4">Envoyer le mail de réinitialisation</button>
                                {{ form_end(requestForm) }}
                            <div class="text-sm">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ./reset -->
        </div>
</div>
{% endblock %}
