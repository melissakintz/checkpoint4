{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} {{ user.pseudo }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% include './components/_sidenav.thml.twig' %}
    <div class="contain">
        <section class="interactions">
            <div class="like">
                {% if user.id is same as app.user.id %}
                    <a href="{{ path('user_edit', {id: user.id}) }}">
                        <ion-icon name="create-outline" size="large"></ion-icon>
                    </a>
                {% endif %}
            </div>
        </section>
        <section class="profil-header">
            <div class="profil-avatar">
                <img src="{{ asset('uploads/' ~user.avatar) }}" alt="image profil">
            </div>
            <div class="profil-content">
                <p class="profil-pseudo">{{ user.pseudo }}</p>
                <p class="profil-description">{{ user.description }}</p>
            </div>
        </section>

        {% if app.user is same as user.id %}
        <section class="bg-white m-32 rounded-2xl">
            <section class="collections">
                <p>Mes collections</p>
                <div class="collection-container">
                    {% for compilation in user.compilations %}
                    <div class="collection">
                        <div class="card card-1"></div>
                        <div class="card card-2"></div>
                        <div class="card card-3"></div>
                        <div class="card card-4"></div>
                    </div>
                    <span class="card-title">
                                <a href="{{ path('compilation_show', {id: compilation.id}) }}">
                                    {{ compilation.title }}
                                </a>
                            </span>
                    {% else %}
                </div>
                <p>Vous n'avez pas encore de collections ...</p>
                {% endfor %}
            </section>

            <section class="likes">
                <p>Mes likes</p>
                <div class="collection-container">
                    {% for compilation in user.likedCompilations %}
                        <div class="collection">
                            <div class="card card-1"></div>
                            <div class="card card-2"></div>
                            <div class="card card-3"></div>
                            <div class="card card-4"></div>
                        </div>
                        <span class="card-title">
                        <a href="{{ path('compilation_show', {id: compilation.id}) }}">
                            {{ compilation.title }}
                        </a>
                    </span>
                    {% else %}
                        <p>Vous n'avez pas encore de collections ...</p>
                    {% endfor %}
                </div>
            </section>
            {% else %}
            <section class="bg-white m-32 rounded-2xl">
                <section class="collections">
                    <p>Ses collections publiques</p>
                    <div class="collection-container">
                        {% for compilation in user.compilations %}
                        {% if compilation.private is same as false %}
                            <div class="collection">
                                <div class="card card-1"></div>
                                <div class="card card-2"></div>
                                <div class="card card-3"></div>
                                <div class="card card-4"></div>
                            </div>
                            <span class="card-title">
                                <a href="{{ path('compilation_show', {id: compilation.id}) }}">
                                    {{ compilation.title }}
                                </a>
                            </span>
                        {% endif %}
                    </div>
                    {% endfor %}
                </section>
                {% endif %}
            </section>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
