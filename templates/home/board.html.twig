{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Board
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% include './components/_sidenav.thml.twig' %}
    <div class="contain">
        <section class="board bg-white rounded-2xl">
            <p class="text-4xl"> mes collections</p>
            <div class="collection-container mr-0 ">
                {% for compilation in compilations %}
                    {% include '/components/_compilation_card.html.twig' %}
                {% else %}
            </div>
                Vous n'avez pas encore créé de collections
            {% endfor %}
        </section>

        <section class="board board-suggestions bg-white rounded-2xl">
            <p class="text-4xl">Suggestions</p>
            <div class="collection-container">
                {% for compilation in suggestions %}
                    {% include '/components/_compilation_card.html.twig' %}
                {% else %}
                    Pas de suggestions pour le moment ...
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

